<h1 class="text-center mt-2">Books</h1>
<hr>
<div class="container">
  <table id="example" class="table table-striped table-bordered" style="width: 1000px;">
    <thead>
    <th>Title</th>
    <th>Author</th>
    <th>User</th>
    <th>Pages</th>
    <th>Tradeable</th>
    <th>Created At</th>
    </thead>
    <tbody>
    <% @visible_books.each do |book| %>
      <tr>
        <td><%= link_to "#{book.title}", book_path(book), class: "text-dark" %></td>
        <td><%= book.author %></td>
        <td><%= link_to "#{book.user.username}", user_path(book.user), class: "text-dark" %></td>
        <td><%= book.pages %></td>
        <td><%= book.trade_able %></td>
        <td><%= book.created_at %></td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>
